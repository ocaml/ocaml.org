  | Data.Event.Meetup -> "bg-avatar-6"
  | Conference -> "bg-avatar-0"
  | Seminar -> "bg-avatar-11"
  | Hackathon -> "bg-avatar-8"
  | Retreat -> "bg-avatar-9"

