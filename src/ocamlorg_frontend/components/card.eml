let card ~data =
  <div class="card dark:dark-card rounded-xl border border-neutral-950">
    <div class="w-full flex justify-center items-center mb-2 h-20 bg-slate-700 text-white rounded-t-xl">
      <img class="mr-3" src="<%s data.img %>" alt="<%s data.alt %>">
      <h2 class="text-white dark:text-dark-white text-3xl font-bold"><%s data.title %></h2>
    </div>
    <div class="p-3">
      <h3 class="text-2xl font-bold text-content dark:text-dark-content mb-3"><%s data.title %></h3>
      <p class="text-base text-content dark:text-dark-content font-normal mb-2">
         <%s data.desc %>
      </p>
      <a class="text-base text-amber-700 font-normal" href=" <%s data.link %>">View More</a>
    </div>
  </div>
