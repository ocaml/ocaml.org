type kind =
  | Module
  | Page
  | Leaf_page
  | Module_type
  | Argument
  | Class
  | Class_type
  | File

type toc = {
title : string;
kind : kind;
href : string option;
children : toc list
}

type t = toc list

let summary = function
  | Page -> "library"
  | Module -> "module"
  | Module_type -> "module type"
  | Argument -> "argument"
  | _ -> ""

let rec nested_render ~path (item : toc) =
  match item.children with
  | [] -> 
    <div class="pl-4 py-2">
      <span class="capitalize small-caps font-light text-xs"><%s! summary item.kind %></span>
      <% (match item.href with | None -> %>
        <span class="font-medium text-gray-900"><%s! item.title %></span>
      <% | Some href -> %>
      <a href="<%s href %>" class="font-medium text-gray-900 hover:text-orange-600">
        <%s! item.title %>
      </a>
      <% ); %>
    </div>
  | children ->
    let default_open, path = match path with 
      | v :: rest when v = item.title -> (true, rest)
      | v -> (item.kind = Page, v)
    in 
    <details <%s if default_open then "open" else "" %>>
      <summary class="py-2 hover:bg-gray-100 cursor-pointer">
        <span class="pl-4 py-2">
          <span class="capitalize small-caps font-light text-xs"><%s! summary item.kind %></span>
          <% (match item.href with | None -> %>
            <span class="font-medium text-gray-900"><%s! item.title %></span>
          <% | Some href -> %>
          <a href="<%s href %>" class="font-medium text-gray-900 hover:text-orange-600">
            <%s! item.title %>
          </a>
          <% ); %>
        </span>
      </summary>
      <ul class="ml-4">
        <% children |> List.iter begin fun item -> %>
          <li>
            <%s! nested_render ~path item %>
          </li>
        <% end; %>
      </ul>
    </details>

let render ~path (t : t) = 
  <div>
    <% (match t with [] ->  %>
    <span class="block py-2 text-gray-900">Empty package map</span>
    <% | _ -> %>
    <div>
      <ul class="space-y-4">
        <% t |> List.iter begin fun item -> %>
        <li>
          <%s! nested_render ~path item %>
        </li>
        <% end; %>
      </ul>
    </div>
    <% ); %>
  </div>
