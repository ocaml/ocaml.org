type section =
  | Overview
  | Jobs
  | Events
  | Resources
  | Outreachy
  | Conferences

let tabs
~current =
  let url_of_section = function
    | Overview -> Url.community
    | Jobs -> Url.jobs
    | Events -> Url.events
    | Resources -> Url.resources
    | Outreachy -> Url.outreachy
    | Conferences -> Url.conferences
  in
  let title_of_section = function
    | Overview -> "Overview"
    | Jobs -> "Jobs"
    | Events -> "Events"
    | Resources -> "Resources"
    | Outreachy -> "Outreachy Internships"
    | Conferences -> "Conferences"
  in
  Layout.subnav_tabs ~title:"Community" ~current ~sections:[Overview; Jobs; Events; Resources; Outreachy; Conferences] ~url_of_section ~title_of_section

let single_column_layout
?use_swiper
?styles
~title
~description
~canonical
~current
inner_html
=
  Layout.render
  ?use_swiper
  ?styles
  ~title
  ~description
  ~canonical
  ~active_top_nav_item:Community @@
  <%s! tabs ~current %>
  <div class="bg-background dark:bg-dark-background">
    <div class="flex-1 z-0 min-w-0">
      <%s! inner_html %>
    </div>
  </div>
