type section =
  | Overview
  | Jobs

let tabs
~current =
  let url_of_section = function
    | Overview -> Url.community
    | Jobs -> Url.jobs
  in
  let title_of_section = function
    | Overview -> "Overview"
    | Jobs -> "Jobs"
  in
  Layout.subnav_tabs ~title:"Community" ~current ~sections:[Overview; Jobs] ~url_of_section ~title_of_section

let single_column_layout
?use_swiper
?styles
~title
~description
~canonical
?active_top_nav_item
~current
inner_html
=
  Layout.render
  ?use_swiper
  ?styles
  ~title
  ~description
  ~canonical
  ?active_top_nav_item @@
  <%s! tabs ~current %>
  <div class="bg-background dark:bg-dark-background">
    <div class="flex-1 z-0 z- min-w-0 pb-12">
      <%s! inner_html %>
    </div>
  </div>
