type section =
  | Overview
  | Cookbook
  | Jobs
  | Events

let tabs
~current =
  let url_of_section = function
    | Overview -> Url.community
    | Cookbook -> Url.cookbook
    | Jobs -> Url.jobs
    | Events -> Url.events
  in
  let title_of_section = function
    | Overview -> "Overview"
    | Cookbook -> "Cookbook"
    | Jobs -> "Jobs"
    | Events -> "Events"
  in
  Layout.subnav_tabs ~title:"Community" ~current ~sections:[Overview; Jobs; Cookbook; Events] ~url_of_section ~title_of_section

let single_column_layout
?use_swiper
?styles
~title
~description
~canonical
~current
inner_html
=
  Layout.render
  ?use_swiper
  ?styles
  ~title
  ~description
  ~canonical
  ~active_top_nav_item:Header.Community
  @@
  <%s! tabs ~current %>
  <div class="bg-background dark:bg-dark-background">
    <div class="flex-1 z-0 z- min-w-0 pb-12">
      <%s! inner_html %>
    </div>
  </div>
