let render (news : Ood.Changelog.t list) =
Layout.render
~title:"OCaml Changelog"
~description:"Read the latest releases and updates from the OCaml ecosystem." @@
<div class="bg-white py-24">
  <div class="container-fluid">
    <div>
      <h1 class="m-0 font-sans text-3xl font-extrabold tracking-normal leading-8 capitalize lg:text-5xl lg:tracking-tight md:text-4xl text-zinc-800">
        OCaml Changelog
      </h1>

      <p class="text-lg text-body-400 mt-6">Read the latest releases and updates from the OCaml ecosystem.</p>
    </div>

    <div class="mt-20">
      <div class="mx-auto leading-5">
        <% news |> List.iter (fun (item : Ood.Changelog.t) -> %>
        <article class="flex relative flex-wrap -mx-6 leading-5">
          <div class="relative px-6 pt-8 pb-6 w-full md:w-5/12 md:pt-12">
            <div class="sticky" style="top: 128px; word-break: keep-all;">
              <h2
                class="my-0 font-sans text-xl font-semibold tracking-normal leading-6 md:text-2xl md:font-extrabold md:leading-7">
                <%s item.title %>
              </h2>
              <time datetime="<%s item.date %>" class="block mt-3 font-sans text-sm text-gray-600"><%s item.date %></time>
              <div class="mt-3 flex flex-row justify-start space-x-4">
                <button type="button" class="rounded-full bg-white px-4 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">Tag 1</button>
                <button type="button" class="rounded-full bg-white px-4 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">Tag 2</button>
              </div>
            </div>
          </div>
          <div class="px-6 w-full md:w-7/12">
            <div class="pt-0 pb-8 ml-12 border-b border-gray-300 border-solid md:ml-0 md:py-12">
              <div class="prose prose-orange mx-auto">
                <%s! item.body_html %>
              </div>
            </div>
          </div>
        </article>
        <% ); %>
      </div>
    </div>
  </div>
</div>