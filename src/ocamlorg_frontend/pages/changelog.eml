let render (news : Ood.Changelog.t list) =
Layout.render
~title:"OCaml Changelog"
~description:"Read the latest releases and updates from the OCaml ecosystem." @@
<div class="bg-white py-24">
  <div class="container-fluid">
    <div>
      <h2 class="font-bold">OCaml Changelog</h2>
      <p class="text-lg text-body-400 mt-6">Read the latest releases and updates from the OCaml ecosystem.</p>
    </div>

    <div class="mt-20">
      <div class="mt-12 space-y-12">
        <% news |> List.iter (fun (item : Ood.Changelog.t) -> %>
        <div class="flex flex-col-reverse lg:flex-row lg:space-x-12">
          <div class="space-y-3 mt-6 lg:mt-0 flex flex-col flex-1">
              <div class="space-y-2">
                  <a href="<%s Url.news_post item.slug %>"
                      class="block text-xl font-semibold hover:text-primary-600"><%s item.title %></a>
              </div>
              <div class="text-body-400 flex space-x-2.5 text-sm">
                  <div><%s item.date %></div>
              </div>
          </div>
        </div>
        <% ); %>
      </div>
    </div>
  </div>
</div>