(library
 (name ocamlorg_static)
 (libraries fmt dream))

(rule
 (targets asset.ml)
 (deps
  %{workspace_root}/asset/css/main.css
  (source_tree %{workspace_root}/asset))
 (action
  (with-stdout-to
   %{null}
   (run %{bin:ocaml-crunch} -m plain %{workspace_root}/asset -o asset.ml))))

(rule
 (targets media.ml)
 (deps
  (source_tree %{workspace_root}/data/media))
 (action
  (with-stdout-to
   %{null}
   (run
    %{bin:ocaml-crunch}
    -m
    plain
    %{workspace_root}/data/media
    -o
    media.ml))))

(rule
 (targets playground_assets.ml)
 (deps
  (file %{workspace_root}/playground/asset/playground_assets.ml))
 (action
  (with-stdout-to
   %{null}
   (run
    cp %{workspace_root}/playground/asset/playground_assets.ml playground_assets.ml))))
