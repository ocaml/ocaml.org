(library
 (name ocamlorg_static)
 (libraries fmt dream))

(rule
 (target asset.ml)
 (deps
  %{workspace_root}/asset/css/main.css
  (source_tree %{workspace_root}/asset))
 (action
  (with-stdout-to
   %{null}
   (run %{bin:ocaml-crunch} -m plain %{workspace_root}/asset -o %{target}))))

(rule
 (target media.ml)
 (deps
  (source_tree %{workspace_root}/data/media))
 (action
  (with-stdout-to
   %{null}
   (run
    %{bin:ocaml-crunch}
    -m
    plain
    %{workspace_root}/data/media
    -o
    %{target}))))

(rule
 (target playground_digests.ml)
 (deps
  (file %{workspace_root}/playground/digest/playground_digests.ml))
 (action
  (with-stdout-to
   %{null}
   (run
    cp
    %{workspace_root}/playground/digest/playground_digests.ml
    %{target}))))
