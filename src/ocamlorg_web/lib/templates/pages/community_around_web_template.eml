let rec take k xs = match k with
  | 0 -> []
  | k -> match xs with
  | [] -> failwith "take"
  | y::ys -> y :: (take (k - 1) ys)

let human_date s =
  let date_time = Timedesc.of_iso8601_exn s in
  Format.asprintf
    "%a."
    (Timedesc.pp ~format:"{wday:Xxx} {mon:Xxx} {mon:0X} {year}" ())
    date_time


