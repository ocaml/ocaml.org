; Worker library

(library
 (name worker)
 (modules worker uTop_complete uTop_lexer uTop_token uTop)
 (libraries
  brr
  ocamlorg_toplevel
  js_of_ocaml-toplevel
  js_of_ocaml-compiler
  astring
  rpclib)
 (preprocess
  (per_module
   ((action
     (run %{bin:cppo} -V OCAML:%{ocaml_version} %{input-file}))
    uTop_complete
    uTop)
   ((pps js_of_ocaml-ppx)
    worker))))

(ocamllex uTop_lexer)

; Base

(executable
 (name toplevel_base)
 (libraries ocamlorg_toplevel base)
 (modules toplevel_base)
 (modes js))

(rule
 (targets export_base.txt)
 (deps toplevel_base.bc)
 (action
  (run jsoo_listunits -o %{targets} stdlib base)))

(executable
 (name worker_base)
 (modules worker_base)
 (libraries worker stdlib base)
 (flags
  (:standard -rectypes -linkall))
 (modes byte))

(rule
 (targets worker_base.js)
 (action
  (run
   %{bin:js_of_ocaml}
   --export
   %{dep:export_base.txt}
   --toplevel
   --pretty
   +toplevel.js
   +dynlink.js
   +base/runtime.js
   %{dep:worker_base.bc}
   -o
   %{targets})))

; Stdlib

(executable
 (name toplevel_stdlib)
 (libraries ocamlorg_toplevel stdlib)
 (modules toplevel_stdlib)
 (modes js))

; Stdlib worker

(rule
 (targets export_stdlib.txt)
 (deps toplevel_stdlib.bc)
 (action
  (run jsoo_listunits -o %{targets} stdlib)))

(executable
 (name worker_stdlib)
 (modules worker_stdlib)
 (libraries worker stdlib)
 (flags
  (:standard -rectypes -linkall))
 (preprocess
  (pps js_of_ocaml-ppx))
 (modes byte))

(rule
 (targets worker.js)
 (action
  (run
   %{bin:js_of_ocaml}
   --export
   %{dep:export_stdlib.txt}
   --toplevel
   --pretty
   +toplevel.js
   +dynlink.js
   %{dep:worker_stdlib.bc}
   -o
   %{targets})))

(subdir
 js/
 (rule
  (alias toplevel)
  (targets
   stdlib-4.13.0.js
   worker.js
   worker_base.js
   base-v0.14.1.js
   playground.js)
  (deps
   ../../playground/index.bc.js
   ../toplevel_stdlib.bc.js
   ../toplevel_base.bc.js
   ../worker.js
   ../worker_base.js)
  (action
   (progn
    (run
     npx
     esbuild
     --minify
     --bundle
     --outfile=playground.js
     ../../playground/index.bc.js)
    (run jsoo_minify ../toplevel_stdlib.bc.js -o stdlib-4.13.0.js)
    (run jsoo_minify ../worker.js -o worker.js)
    (run jsoo_minify ../toplevel_base.bc.js -o base-v0.14.1.js)
    (run jsoo_minify ../worker_base.js -o worker_base.js)))))
